@model ASTUdocs.Profile

@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_LayoutPagelog.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

    <legend>Login</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
    <div class="text-success">
        @TempData["info"]
    </div>


        <div class="form-horizontal">


            <div class="form-group">
                @Html.LabelFor(a => a.E_mail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(a => a.E_mail, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", required = "required" } )
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
            <div style="color:red">@ViewData["id"]</div>
        </div>
}
